<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Page - Question Bank System</title>
    <link rel="stylesheet" href="/styles.css">
    <script src="/auth.js"></script>
</head>
<body>
    <header>
        <h1>User Page</h1>
    </header>
    <main>
        <section id="available-exams">
            <h2>Available Exams</h2>
            <div class="exam-list" id="examList">
                <!-- Exams will be loaded here -->
            </div>
        </section>
        <section id="quiz-section">
            <h2>Take a Quiz</h2>
            <div class="quiz-list" id="quizList">
                <!-- Quizzes will be loaded here -->
            </div>
        </section>
        <section id="results-section">
            <h2>Your Results</h2>
            <table>
                <thead>
                    <tr>
                        <th>Quiz</th>
                        <th>Score</th>
                        <th>Passing Probability</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody id="userResultsTable">
                    <!-- User results will be loaded here -->
                </tbody>
            </table>
        </section>
    </main>
    <footer>
        <p>Â© 2024 Question Bank System</p>
    </footer>
    <script src="/user.js"></script>
</body>
</html>
